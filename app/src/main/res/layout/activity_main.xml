<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joy.glide.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载网络图片到Imageview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn_sdcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载本地资源到Imageview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn_into_viewgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载到ViewGroup"/>

        <Button
            android:id="@+id/btn_preload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片预加载"/>

        <Button
            android:id="@+id/btn_custom_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义URL">
        </Button>


        <ImageView
            android:id="@+id/imv"
            android:layout_width="400dp"
            android:layout_height="400dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn"/>

        <LinearLayout
            android:id="@+id/lin_for_img"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>


</ScrollView>
